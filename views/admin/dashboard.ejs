<script>
    (function ($) {
    "use strict";

    /*Sale statistics Chart*/
    if ($('#myChart').length) {
      var months = <%- JSON.stringify(months) %>;
      var monthlyTotalOrderCount = <%- JSON.stringify(monthlyTotalOrderCount) %>;
      var monthlyTotalPlacedCount = <%- JSON.stringify(monthlyTotalPlacedCount) %>;
      var monthlyTotalPendingCount = <%- JSON.stringify(monthlyTotalPendingCount) %>;

      monthlyTotalPendingCount
      var ctx = document.getElementById('myChart').getContext('2d');
      var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'line',

        // The data for our dataset
        data: {
          labels: months,
          datasets: [{
              label: 'Total Orders',
              tension: 0.3,
              fill: true,
              backgroundColor: 'rgba(44, 120, 220, 0.2)',
              borderColor: 'rgba(44, 120, 220)',
              data: monthlyTotalOrderCount
            },
            {
              label: 'Placed Orders',
              tension: 0.3,
              fill: true,
              backgroundColor: 'rgba(4, 209, 130, 0.2)',
              borderColor: 'rgb(4, 209, 130)',
              data: monthlyTotalPlacedCount 
            },
            {
              label: 'Pending Orders',
              tension: 0.3,
              fill: true,
              backgroundColor: 'rgba(380, 200, 230, 0.2)',
              borderColor: 'rgb(380, 200, 230)',
              data: monthlyTotalPendingCount
            }
          ]
        },
        options: {
          plugins: {
            legend: {
              labels: {
                usePointStyle: true,
              },
            }
          }
        }
      });
    } 
  })(jQuery);

    
            
    
   
</script>